{
    "permissions": {
        "allow": [
            "Bash(git status:*)",
            "Bash(git diff:*)",
            "Bash(git log:*)",
            "Bash(php artisan:*)",
            "Bash(composer:*)",
            "Bash(npm run:*)",
            "Bash(vendor/bin/sail:*)"
        ],
        "ask": [
            "Bash(*)",
            "Edit(**)",
            "Write(**)"
        ],
        "deny": [
            "Read(./.env)",
            "Read(./.env.*)",
            "Read(./storage/**)",
            "Read(./.git/**)"
        ]
    },
    "env": {
        "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1"
    },
    "hooks": {
        "SessionStart": [
            {
                "matcher": "startup",
                "hooks": [
                    {
                        "type": "command",
                        "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-start.sh"
                    }
                ]
            }
        ]
    }
}